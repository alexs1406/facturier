{# Widgets #}

{%- block form_row -%}

    <div class="form-group">
        {{ form_label(form, name|capitalize, {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}

        <div class="col-md-3 col-sm-4">
            {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form) }}
    </div>

{%- endblock form_row -%}


